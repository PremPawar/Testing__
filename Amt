<!DOCTYPE html>
<html>
<head>
    <title>Tab Selector</title>
    <style>
        .tab-content {
            display: none;
        }
    </style>
</head>
<body>
    <select id="tabSelector">
        <option value="tab1">Tab 1</option>
        <option value="tab2">Tab 2</option>
        <option value="tab3">Tab 3</option>
    </select>
    
    <div id="tab1" class="tab-content">
        <!-- Content for Tab 1 -->
        <h2>Tab 1 Content</h2>
        <p>This is the content for Tab 1.</p>
    </div>
    
    <div id="tab2" class="tab-content">
        <!-- Content for Tab 2 -->
        <h2>Tab 2 Content</h2>
        <p>This is the content for Tab 2.</p>
    </div>
    
    <div id="tab3" class="tab-content">
        <!-- Content for Tab 3 -->
        <h2>Tab 3 Content</h2>
        <p>This is the content for Tab 3.</p>
    </div>

    <script>
        // Get the select element and tab content divs
        const tabSelector = document.getElementById("tabSelector");
        const tabContents = document.querySelectorAll(".tab-content");

        // Add an event listener to the select element
        tabSelector.addEventListener("change", function() {
            // Hide all tab content divs
            tabContents.forEach(tab => {
                tab.style.display = "none";
            });

            // Show the selected tab content
            const selectedTab = document.getElementById(tabSelector.value);
            if (selectedTab) {
                selectedTab.style.display = "block";
            }
        });
    </script>
</body>
</html>