// Initialize PureCloud API client
const client = platformClient.ApiClient.instance;

// Set environment base path (replace with your specific Genesys Cloud region)
client.setEnvironment(platformClient.PureCloudRegionHosts.us_west_2);

//AUTH
client.loginClientCredentialsGrant(process.env.CLIEND_ID, process.env.CLIENT_SECRET)
    .then(() => {
        console.log('Authentication Successfull');
    })
    .catch((err) => {
        console.log('err', err);
    });