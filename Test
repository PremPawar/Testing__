ji<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Clickable Y-Axis Values</title>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/3.5.1/chart.min.js"></script>
</head>
<body>
  <canvas id="myBarChart"></canvas>

  <script>
    const data = {
      labels: ['Label 1', 'Label 2', 'Label 3'],
      datasets: [{
        label: 'Data',
        data: [10, 20, 15],
        backgroundColor: ['red', 'green', 'blue'],
        links: ['https://link1.com', 'https://link2.com', 'https://link3.com']
      }]
    };

    const config = {
      type: 'bar',
      data: data,
      options: {
        onClick: (e, activeElements) => {
          if (activeElements.length > 0) {
            const dataIndex = activeElements[0].index;
            const link = data.datasets[0].links[dataIndex];
            if (link) {
              window.open(link, '_blank');
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            ticks: {
              callback: (value, index, values) => {
                // Use index to get the corresponding link
                const link = data.datasets[0].links[index];
                return link ? `<a href="${link}" target="_blank">${value}</a>` : value;
              }
            }
          }
        }
      }
    };

    const myChart = new Chart(document.getElementById('myBarChart'), config);
  </script>
</body>
</html>
