import React, { useState } from 'react';
import './App.css'; // Import your Tailwind CSS styles

const App = () => {
  const [activeTab, setActiveTab] = useState('tab1');

  const handleTabChange = (tab) => {
    setActiveTab(tab);
  };

  return (
    <div className="flex flex-col min-h-screen">
      {/* Top Navbar */}
      <nav className={`bg-${activeTab === 'tab1' ? 'teal' : 'purple'}-500 p-4 text-white text-center`}>
        <div className="flex justify-center items-center">
          <div className="font-bold text-xl">Logo</div>
          <div className="flex space-x-4">
            <TabButton tab="tab1" activeTab={activeTab} onChange={handleTabChange}>
              Tab 1
            </TabButton>
            <TabButton tab="tab2" activeTab={activeTab} onChange={handleTabChange}>
              Tab 2
            </TabButton>
          </div>
        </div>
      </nav>

      {/* Bottom Navbar */}
      <nav className="bg-gray-100 p-4 text-center">
        <div className="flex space-x-4 justify-center">
          {activeTab === 'tab1' && (
            <>
              <OptionButton>Option 1</OptionButton>
              <OptionButton>Option 2</OptionButton>
              <OptionButton>Option 3</OptionButton>
            </>
          )}
          {activeTab === 'tab2' && (
            <>
              <OptionButton>Option A</OptionButton>
              <OptionButton>Option B</OptionButton>
              <OptionButton>Option C</OptionButton>
            </>
          )}
        </div>
      </nav>
    </div>
  );
};

const TabButton = ({ tab, activeTab, onChange, children }) => {
  return (
    <button
      className={`px-4 py-2 rounded ${
        activeTab === tab ? 'bg-teal-700 text-white' : 'text-teal-500'
      }`}
      onClick={() => onChange(tab)}
    >
      {children}
    </button>
  );
};

const OptionButton = ({ children }) => {
  return (
    <button className="px-4 py-2 bg-white rounded border border-gray-300">
      {children}
    </button>
  );
};

export default App;
